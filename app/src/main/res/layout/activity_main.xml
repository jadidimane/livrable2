<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/b"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="30dp">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="137dp"
                app:srcCompat="@drawable/img" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/StyleTV"

                    android:text="Inscription: nouveau étudiant" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView"
                    style="@style/StyleTV"

                    android:text="CIN :" />

                <EditText
                    android:id="@+id/txtcin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:ems="10"
                    android:inputType="text"
                    android:text="N° CIN"
                    android:textSize="@dimen/livSizeTV" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tnom"
                    style="@style/StyleTV"

                    android:text="Nom :" />

                <EditText
                    android:id="@+id/txtnom"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:ems="10"
                    android:inputType="text"
                    android:text="nom"
                    android:textSize="@dimen/livSizeTV" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView3"
                    style="@style/StyleTV"

                    android:text="Prénom :" />

                <EditText
                    android:id="@+id/txtrenom"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:ems="10"
                    android:inputType="text"
                    android:text="prénom"
                    android:textSize="@dimen/livSizeTV" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView4"
                    style="@style/StyleTV"

                    android:text="Tel :" />

                <EditText
                    android:id="@+id/txttel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:ems="10"
                    android:inputType="text"
                    android:text="Tel"
                    android:textSize="@dimen/livSizeTV" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    style="@style/StyleTV"

                    android:text="Email :" />

                <EditText
                    android:id="@+id/txtmail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:ems="10"
                    android:inputType="text"
                    android:text="Email"
                    android:textSize="@dimen/livSizeTV" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView6"
                    style="@style/StyleTV"

                    android:text="Date Naiss :" />

                <EditText
                    android:id="@+id/txtdate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:ems="10"
                    android:inputType="text"
                    android:text="Date"
                    android:textSize="@dimen/livSizeTV" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView7"
                    style="@style/StyleTV"

                    android:text="Mot de passe :" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textview8"
                    style="@style/StyleTV"

                    android:text="Mot de passe :" />

            </LinearLayout>

            <Button
                android:id="@+id/bc"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:background="#5A0606"
                android:fontFamily="sans-serif"
                android:text="Contunier"
                android:textColor="#F3FFFFFF"
                android:textSize="34sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/ba"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:background="#5A0606"
                android:fontFamily="sans-serif"
                android:text="Annuler"
                android:textColor="#F3FFFFFF"
                android:textSize="34sp"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="217dp"
                android:text="TextView" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>